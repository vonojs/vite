{
	"name": "vonojs",
	"description": "Dual-build server & client with Vite.",
	"version": "0.0.2",
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "pnpm builder",
		"play": "cd playground && pnpm run dev",
		"lint": "biome format . --write"
	},
	"files": ["dist"],
	"exports": {
		".": {
			"import": "./dist/mod.js",
			"types": "./dist/mod.d.ts"
		},
		"./runtime": {
			"import": "./dist/runtime.js",
			"types": "./dist/runtime.d.ts"
		},
		"./adaptors": {
			"import": "./dist/adaptors/index.js",
			"types": "./dist/adaptors/index.d.ts"
		}
	},
	"peerDependencies": {
		"vite": "^5.3.0"
	},
	"devDependencies": {
		"unenv": "^1.9.0",
		"sirv": "^2.0.4",
		"@benstack/logger": "^0.1.0",
		"@benstack/builder": "^0.0.9",
		"esbuild": "^0.23.0",
		"esbuild-plugin-d.ts": "^1.2.3",
		"@biomejs/biome": "1.6.4",
		"@types/node": "^20.12.4",
		"typescript": "^5.2.2"
	}
}
